FROM mcr.microsoft.com/dotnet/aspnet:9.0-preview AS base
USER $APP_UID
WORKDIR /app


FROM mcr.microsoft.com/dotnet/sdk:9.0-preview AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["WorkerNodeApp.csproj", "."]
RUN dotnet restore "./WorkerNodeApp.csproj"
COPY . .
WORKDIR "/src/."
RUN dotnet build "./WorkerNodeApp.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./WorkerNodeApp.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "WorkerNodeApp.dll"]
